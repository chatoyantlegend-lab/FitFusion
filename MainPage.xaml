<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="White">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header Card -->
            <Frame BackgroundColor="Orange"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   BorderColor="Transparent">
                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                    
                    <!-- Greeting -->
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                        <Label x:Name="GreetingLabel" 
                               FontSize="28" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Label x:Name="SubtitleLabel"
                               FontSize="14" 
                               TextColor="White" 
                               Opacity="0.9"/>
                    </VerticalStackLayout>
                    
                    <!-- Profile Icon -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           WidthRequest="50"
                           HeightRequest="50"
                           CornerRadius="25"
                           BackgroundColor="OrangeRed"
                           BorderColor="White"
                           HasShadow="False"
                           Padding="0">
                        <Label Text="👤" 
                               FontSize="24" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                    </Frame>
                    
                    <!-- Streak Card -->
                    <Frame Grid.Row="1" Grid.ColumnSpan="2" 
                           Margin="0,15,0,0"
                           BackgroundColor="#55FFFFFF"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="False"
                           BorderColor="Transparent">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" 
                                   Text="🔥" 
                                   FontSize="24" 
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" 
                                                Spacing="2" 
                                                Margin="10,0,0,0">
                                <Label x:Name="StreakDaysLabel"
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       TextColor="White"/>
                                <Label x:Name="StreakLabel"
                                       FontSize="12" 
                                       TextColor="White" 
                                       Opacity="0.9"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2" 
                                                Spacing="2" 
                                                HorizontalOptions="End">
                                <Label x:Name="NextMilestoneLabel"
                                       FontSize="10" 
                                       TextColor="White" 
                                       Opacity="0.8"/>
                                <Label x:Name="MilestoneDaysLabel"
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="White"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                    
                    <!-- Stats Card -->
                    <Frame Grid.Row="2" Grid.ColumnSpan="2"
                           Margin="0,10,0,0"
                           BackgroundColor="White"
                           CornerRadius="15"
                           Padding="20"
                           HasShadow="True"
                           BorderColor="LightGray">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Label Text="👟" FontSize="20" VerticalOptions="Center"/>
                            <VerticalStackLayout Spacing="2">
                                <Label x:Name="StepsValueLabel"
                                       FontSize="24" 
                                       FontAttributes="Bold" 
                                       TextColor="Black"/>
                                <Label x:Name="StepsLabel"
                                       FontSize="12" 
                                       TextColor="Gray"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>
            </Frame>
            
            <!-- Today's Challenge Section -->
            <VerticalStackLayout Spacing="10">
                <Label x:Name="TodayChallengeLabel"
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="Black"/>
                
                <Frame BackgroundColor="MediumPurple"
                       CornerRadius="20"
                       Padding="20"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <VerticalStackLayout Spacing="10">
                        
                        <!-- Challenge Type and Points -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   x:Name="ChallengeTypeLabel"
                                   FontSize="12"
                                   TextColor="White"
                                   Opacity="0.9"/>
                            <Label Grid.Column="1"
                                   x:Name="ChallengePointsLabel"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </Grid>
                        
                        <!-- Challenge Title -->
                        <Label x:Name="ChallengeTitleLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        
                        <!-- Progress -->
                        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                            <Label Grid.Column="0"
                                   x:Name="ProgressTextLabel"
                                   FontSize="12"
                                   TextColor="White"
                                   Opacity="0.9"/>
                            <Label Grid.Column="2"
                                   x:Name="ProgressPercentageLabel"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </Grid>
                        
                        <!-- Progress Bar Background -->
                        <Frame HeightRequest="8"
                               CornerRadius="4"
                               Padding="0"
                               BackgroundColor="#33FFFFFF"
                               HasShadow="False"
                               BorderColor="Transparent">
                            <Frame x:Name="ProgressBarFill"
                                   HorizontalOptions="Start"
                                   WidthRequest="0"
                                   HeightRequest="8"
                                   CornerRadius="4"
                                   Padding="0"
                                   BackgroundColor="White"
                                   HasShadow="False"
                                   BorderColor="Transparent"/>
                        </Frame>
                        
                        <!-- Time Remaining -->
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="⏰" FontSize="14" TextColor="White"/>
                            <Label x:Name="TimeRemainingLabel"
                                   FontSize="12"
                                   TextColor="White"
                                   Opacity="0.9"/>
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
